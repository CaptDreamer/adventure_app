<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><%= post.title %>
			<% if signed_in? %>
				<span class = "pull-right">
					<%= link_to "Edit", edit_post_path(post) %> | <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" } %>
				</span>
			<% end %>
		</h3>
	</div>
	<div class="panel-body">
		<span class = "lead"><%= post.content%></span>
	</div>
	<div class="panel-footer">	
		<span class =  "text-muted small pull-left">Posted <%= time_ago_in_words(post.created_at) %> ago.</span><span class = "text-muted small pull-right">By: <%= post.user.first_name %></span></span>
	</div>
</div>