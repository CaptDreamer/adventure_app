<% provide(:title, @post.title) %>
<div class = "container">
	<div class = "col-md-6 col-md-offset-3">
		<h2><%= @post.title %></h2>
		<p class = "lead"><%= @post.content%></p>
		<div class = "small pull-left text-muted"><%= @post.created_at %></div>
		<div class = "small pull-right text-muted"><%= @post.user.first_name %></div>
	</div>
</div>